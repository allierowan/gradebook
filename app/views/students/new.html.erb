<h1>New Student</h1>
<%= form_for @student do |f| %>
  <div class="form-group">
    <%= f.label :full_name %>
    <%= f.text_field :full_name, class:"form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, class:"form-control" %>
  </div>
  <%= f.submit "Create", class: "btn btn-primary" %>
<% end %>
